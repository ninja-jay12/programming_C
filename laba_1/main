#include <stdio.h> // необходимо для корректного вызова функций ввода/вывода 
int main(void) // главная функция main не принимает данных от операционной системы, возвращает статус завершения 
{ // начало тела программы
	// описание переменных
	float l; // расстояние между пунктами
	float t; // прошедшее время
	float v1; // скорость первого пешехода
	float v2; // скорость второго пешехода
	// ввод исходных данных
	printf("l="); // вывод на экран подсказки
	scanf_s("%f", &l); // ввод с клавиатуры значения переменной L
	printf("t="); // вывод на экран подсказки
	scanf_s("%f", &t); // ввод с клавиатуры значения переменной t
	printf("v1="); // вывод на экран подсказки
	scanf_s("%f", &v1); // ввод с клавиатуры значения переменной v1
	// решение задачи
	v2 = l / t - v1; // вычисление скорости второго пешехода
	// вывод результатов 
	printf("speed= %f\n", v2); // вывод на экран значения переменной v2
	getchar(); 
	getchar(); 
	// программа возвращается, признак корректного завершения 
	return 0; 
} // конец тела программы
